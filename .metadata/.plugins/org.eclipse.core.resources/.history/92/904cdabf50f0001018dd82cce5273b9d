package methods;

public class Pattern5 {
	public static void main(String[]Args) {
		int n=3;
	for(int row=1;row<=2*n-1;row++) {
	for(int col=1;col<=2*n-1;col++) {
		if((col-row>=n-1||row+col<=n+2)&&(row-col>=n-2||row+col>=3*n-1))
		    System.out.print("*");
		else
			System.out.print(" ");
		
	}
	System.out.println();
	}}}
