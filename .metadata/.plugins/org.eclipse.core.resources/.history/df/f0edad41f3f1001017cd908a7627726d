package stringbuilder;

public class Program1 {
	public static void main(String[]args) {
		StringBuilder sb=new StringBuilder();
		System.out.println(sb.length());
		StringBuilder sb1=new StringBuilder();
		System.out.println(sb1.length());
		StringBuilder sb2=new StringBuilder();
		System.out.println(sb2.length());
		StringBuilder sb3=new StringBuilder();
		System.out.println(sb3.length());
		sb.append("123456789012345");//default 16
		sb1.append("1234567890123456");//default 16
		sb2.append("12345678901234567890");//more than 16
		System.out.println(sb.capacity());
		System.out.println(sb1.capacity());
		System.out.println(sb2.capacity());//(old capacity*2)+2;
		sb2.append("12345678901234567890");//more than 34
		System.out.println(sb2.capacity());



	}

}
