package array_dsa;

public class Program7 {
	public static void main(String[] args) {
		 int[]a= {2,5,3,7,10,4};
		 int max=a[0];
		 int min=a[0];
		 int smax=a[0];
		 int smin=a[0];
		 for(int i=0;i<a.length;i++) {
			 if(a[i]>max) {
				 smax=max;
				 max=a[i];
				 
			 }
			 else if(a[i]<max && a[i]>smax) {
				 smax=a[i];
			 }
			  if(a[i]<min) {
				  smin=min;
				   min=a[i];

			 }
			  else if(a[i]>min && a[i]<smin) {
					 smin=a[i];
		 }}
		 
		 System.out.println("Second Largest element:"+smax+"  and Second Smallest element:"+smin);}}
 