package methods;

public class Pattern4 {
	public static void main(String[]Args) {
		int n=3;
	for(int row=n;row>=1;row--) {
	for(int col=1;col<=2*n-1;col++) {
		if(row>=col||row+col>=2*n)
		    System.out.print("*");
		else
			System.out.print(" ");

	}}
	for(int row=1;row<=n;row++) {
		for(int col=1;col<=2*n-1;col++) {
			if(row>=col||row+col>=2*n)
			    System.out.print("*");
			else
				System.out.print(" ");

		}System.out.println();
}
}}
